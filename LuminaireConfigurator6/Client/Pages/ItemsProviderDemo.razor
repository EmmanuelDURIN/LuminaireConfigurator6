@page "/itemsproviderdemo"

@using LuminaireConfigurator6.Shared

<h1>Configuration List</h1>

<p>List of configurations</p>
@if (!isFirstSetOfDataLoaded)
{
    <div>Loading &hellip;</div>
}
<table class="table">
    <thead>
        <tr>
            <th>Configuration Name</th>
            <th>Creation Date</th>
            <th>Lamp Color (°K)</th>
            <th>Optic</th>
            <th>LampFlux (lm)</th>
        </tr>
    </thead>
    <tbody>
        <Virtualize Context="configuration" ItemsProvider="@LoadLuminaireConfigurations">
            <ItemContent>
                <tr>
                    <td><a href="configurationdetails/@configuration.Id">@configuration.Name</a></td>
                    <td>@configuration.CreationTime.ToShortDateString()</td>
                    <td>@configuration.LampColor</td>
                    <td>@configuration.Optic</td>
                    <td>@configuration.LampFlux</td>
                </tr>
            </ItemContent>
            <Placeholder>
                <div>
                    Loading&hellip;
                </div>
            </Placeholder>

        </Virtualize>
    </tbody>
</table>